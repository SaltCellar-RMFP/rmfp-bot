// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Season {
  number    Int     @id @default(autoincrement())
  completed Boolean @default(false)
  Week      Week[]
}

model Week {
  number       Int      @id @default(autoincrement())
  start        DateTime
  end          DateTime
  theme        String
  eventId      String?  @unique
  Entry        Entry[]
  Season       Season   @relation(fields: [seasonNumber], references: [number], onDelete: Cascade)
  seasonNumber Int

  @@unique([number, seasonNumber])
}

model Entry {
  week           Week   @relation(fields: [weekNumber], references: [number], onDelete: Cascade)
  weekNumber     Int
  userId         String
  messageId      String @unique
  messageUrl     String @unique
  reacts         Int
  winnerBonus    Int    @default(0)
  firstTimeBonus Int    @default(0)

  @@id(name: "entryId", [weekNumber, userId])
  @@unique([weekNumber, userId])
}
