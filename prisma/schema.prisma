// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Week {
  number  Int      @id @default(autoincrement())
  start   DateTime
  end     DateTime
  theme   String
  eventId String?
  Entry   Entry[]
}

model Entry {
  week       Week   @relation(fields: [weekNumber], references: [number])
  weekNumber Int
  userId     String
  messageId  String
  messageUrl String
  reacts     Int

  @@id(name: "entryId", [weekNumber, userId])
}
